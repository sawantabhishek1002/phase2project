<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<!-- configuration for User Controller -->
	<servlet>
		<servlet-name>UserController</servlet-name>
		<servlet-class>vikas.RatanRaman.User.UserController</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/UserPage</url-pattern>
	</servlet-mapping>
	<!-- end of userController config -->


	<!-- configuration of Flight controller -->
	<servlet>
		<servlet-name>FlightController</servlet-name>
		<servlet-class>vikas.RatanRaman.Flight.FlightController</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>FlightController</servlet-name>
		<url-pattern>/FlightPage</url-pattern>
	</servlet-mapping>

	<!-- end of Flight Controller -->

	<!-- configuration of MainController or Site controller -->
	<servlet>
		<servlet-name>SiteController</servlet-name>
		<servlet-class>vikas.RatanRaman.SiteController.Controller</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SiteController</servlet-name>
		<url-pattern>/Main</url-pattern>
	</servlet-mapping>
	
	<!--  End of Site Controller  -->
	
	<!--  configuration of Booking Controller  -->
	<servlet>
		<servlet-name>BookingController</servlet-name>
		<display-name>BookingController</display-name>
		<description></description>
		<servlet-class>vikas.RatanRaman.Booking.BookingController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookingController</servlet-name>
		<url-pattern>/Booking</url-pattern>
	</servlet-mapping>

</web-app>
